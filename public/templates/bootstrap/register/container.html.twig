<h3>Registrierung</h3>
<form action="/user/create" class="form-horizontal" method="post">
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="form-group">
                <label for="name" class="col-sm-2 control-label">Vorname</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="name" name="name" placeholder="Vorname">
                </div>
            </div>
            <div class="form-group">
                <label for="surname" class="col-sm-2 control-label">Nachname</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="surname" name="surname" placeholder="Nachname">
                </div>
            </div>
            <div class="form-group">
                <label for="street" class="col-sm-2 control-label">Straße</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="street" name="street" placeholder="Straße">
                </div>
            </div>
            <div class="form-group">
                <label for="housenumber" class="col-sm-2 control-label">Hausnummer</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="housenumber" name="housenumber" placeholder="Hausnummer">
                </div>
            </div>
            <div class="form-group">
                <label for="city" class="col-sm-2 control-label">Stadt</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="city" name="city" placeholder="Stadt">
                </div>
            </div>
            <div class="form-group">
                <label for="postcode" class="col-sm-2 control-label">Postleitzahl</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="postcode" name="postcode" placeholder="Postleitzahl">
                </div>
            </div>
        </div>
    </div>
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="form-group">
                <label for="mail" class="col-sm-2 control-label">E-Mail</label>
                <div class="col-sm-10">
                    <input type="email" class="form-control" id="mail" name="mail" placeholder="E-Mail" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,3}$">
                </div>
            </div>
            <div class="form-group">
                <label for="password" class="col-sm-2 control-label">Passwort</label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" id="password" name="password" placeholder="Passwort">
                </div>
            </div>
            <div class="form-group">
                <label for="password2" class="col-sm-2 control-label">Passwort wdh.</label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" id="password2" name="password2" placeholder="Passwort wiederholung">
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-offset-10">
        <button type="reset" class="btn btn-danger">Reset</button>
        <button type="submit" class="btn btn-primary">Absenden</button>
    </div>

    <input type="hidden" name="register" value="true">
</form>